<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmu.artist.app.SongPlayer">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play the first song"
        android:id="@+id/song1"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="song1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Music Player"
        android:id="@+id/textView"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paly the second song"
        android:id="@+id/song2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="song2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/pause"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/song2"
        android:layout_toLeftOf="@+id/song1"
        android:onClick="pause"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop"
        android:layout_alignTop="@+id/pause"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:onClick="stop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume"
        android:id="@+id/resume"
        android:layout_alignTop="@+id/stop"
        android:layout_centerHorizontal="true"
        android:onClick="resume"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="back"/>
</RelativeLayout>
